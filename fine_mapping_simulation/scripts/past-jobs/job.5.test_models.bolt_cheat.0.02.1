#!/bin/bash
#SBATCH --mem 32G
#SBATCH -c 4
#SBATCH -t 00:15:00
source /home/patrickgibbs/.bashrc
conda activate myenv1

if [[ "0.02 0.05 0.1" =~ 0.02  ]]; then
    mkdir small_chunks_current/chunked_sims/chucks_1_marker_her_0.02_ind50000_casual_1/models/bolt_cheat
fi
if [[  "0.1 0.2 0.5 0.75" =~ 0.02 ]]; then
    mkdir small_chunks_current/chunk_compheno_sims/combined_her_0.02_ind50000_casual_1/models/bolt_cheat
fi

for ((i=0; i<20; i++)); do
    # make the params file for bolt
    if [[ "0.02 0.05 0.1" =~ 0.02 ]]; then
        num_lines=$(wc -l < small_chunks_current/chunked_sims/chucks_1_marker_her_0.02_ind50000_casual_1/fine_map_gwas/sample_${i}.summaries)
        casual_prop=$(echo "scale=7; 1/$num_lines" | bc)
        echo "0.02 0$casual_prop 0" > small_chunks_current/chunked_sims/chucks_1_marker_her_0.02_ind50000_casual_1/models/bolt_cheat/params_$i
        ~/dsmwpred/patrick/ldak --mega-prs small_chunks_current/chunked_sims/chucks_1_marker_her_0.02_ind50000_casual_1/models/bolt_cheat/sample_${i} --model bolt --summary small_chunks_current/chunked_sims/chucks_1_marker_her_0.02_ind50000_casual_1/fine_map_gwas/sample_${i}.summaries --cors small_chunks_current/cors/sample_${i} --power 0.25 --high-LD highld.txt --allow-ambiguous YES --max-threads 4 --parameters small_chunks_current/chunked_sims/chucks_1_marker_her_0.02_ind50000_casual_1/models/bolt_cheat/params_$i
    fi
    if [[ "0.1 0.2 0.5 0.75" =~ 0.02 ]]; then
        num_lines=$(wc -l < small_chunks_current/chunk_compheno_sims/combined_her_0.02_ind50000_casual_1/fine_map_gwas/sample_${i}.summaries)
        casual_prop=$(echo "scale=7; 1/$num_lines" | bc)
        echo "0.02 0$casual_prop 0" > small_chunks_current/chunk_compheno_sims/combined_her_0.02_ind50000_casual_1/models/bolt_cheat/params_$i
        ~/dsmwpred/patrick/ldak --mega-prs small_chunks_current/chunk_compheno_sims/combined_her_0.02_ind50000_casual_1/models/bolt_cheat/sample_${i} --model bolt --summary small_chunks_current/chunk_compheno_sims/combined_her_0.02_ind50000_casual_1/fine_map_gwas/sample_${i}.summaries --cors small_chunks_current/cors/sample_${i} --power 0.25 --high-LD highld.txt --allow-ambiguous YES --max-threads 4 --parameters small_chunks_current/chunk_compheno_sims/combined_her_0.02_ind50000_casual_1/models/bolt_cheat/params_$i
    fi

done

